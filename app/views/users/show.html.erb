<div class="row form user_profile">
  <div class="col-lg-12">
    <div class="image" style="background-image: url(<%= @user.avatar.url(:medium) %>);"></div>
    <h2><%= "#{@user.name}" %><span><%= "#{@user.name_kana}" %></span></h2>
    <% if current_user.id == @user.id %>
    <% if @user.id %>
      <div class="profile_edit">
        <%= link_to "profile_edit",edit_user_path(current_user), {:class => "btn btn-primary withripple"} %>
        <%= link_to "profile_edit",edit_user_path(@user.id), {:class => "btn btn-primary withripple"} %>
      </div>
    <% end %>
    
    
  </div>
</div>
